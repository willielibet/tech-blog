<div class="post card">
    <div class="card-header">
        <h2>Create a New Post</h2>
    </div>
    <form class="card-body" id="newPost">
        <label class="form-label" for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-input" />

        <label class="form-label" for="postContent">Content</label>
        <textarea name="postContent" class="form-input"></textarea>

        <button class="btn btn-primary" type="submit">Create</button>
    </form>
</div>


<script src="/js/newPost.js"></script>