<div class="post">
    <article class="card">
        <div class="container">
            <h2>{{post.title}}</h2>
            <div>
                Posted by {{post.User.username}} on {{format_date post.createdAt}}
            </div>
        </div>
        <div class=" card-body">
            {{post.body}}
        </div>
    </article>

    {{!-- if the blog post has comments --}}
    {{#if post.Comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        {{!-- show each comment --}}
        <div class="card-body">
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    {{User.username}}, {{format_date createdAt}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form class="card">
        <div class="card-header">
            <h3>Add a New Comment</h3>
        </div>

        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment">Comment</label>

            <textarea name="comment"></textarea>

            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>